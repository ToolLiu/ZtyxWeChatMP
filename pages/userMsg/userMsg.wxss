
.title{
  display: flex;
  justify-content: center;
  padding-bottom: 13rpx;
  border-bottom: rgb(46, 46, 46) solid 4rpx;
}

.coalInfoRow {
  flex-direction: column;
  align-items: flex-start;
}

.mainContainer {
  padding: 10px;
  background-color: #f9f9f9;
}

.container {
  position:relative;
  margin-bottom: 13px;
  padding: 20px;
  background-color: white;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.6);
}

.destination, .coalVar, .name, .plate, .orderTime {
  margin-bottom: 10px;
  font-size: 30rpx;
  color: #333;
}

.destination, .coalVar {
  font-size: 18px;
  font-weight: bold;
}

.btn {
  background-color: #1AAD19;
  color: #ffffff;
  border-radius: 10px;
  border: #000000 solid 1px;
}

 .buttonContainer {
  margin-left: 23%;
 }
 .location{
  position: absolute;
  left: 450rpx;
  top: 50rpx;
  border: solid 4rpx rgb(0, 0, 0);
  border-radius: 15rpx;
  padding: 5rpx 10rpx;
 }
 .location-img{
  width: 70rpx;
  height: 70rpx;
 }
 .location-msg{
  margin-top: 10rpx;
  float: right;
  margin: 10rpx;
  font-size: 40rpx;
  line-height: 50rpx;
 }
 .mapContainer{
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;   /* 一行一个view */
  align-items: center;
  justify-content: center;
  height: 100%;   /* 确保 .mapContainer 占满可用空间 */
  width: 100%;
  background-color: rgba(172, 172, 172, 0.9);
 }
 .map{
  width: 100%;
  height: 50%;
 }
 .mapBtn{
   margin-top: 10rpx;
 }