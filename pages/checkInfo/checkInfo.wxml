<view class="page">
  <view class="heading">下单页面</view>
  <view class="subheading">请核对您的个人信息</view>
  <form class="form-box" bindsubmit="addCoalOrders">
    <view class="form-row coalVar">
      <view class="label coalVar">煤种：</view>
      <view>{{coalorder.coal_var}}</view>
    </view>
    <view class="form-row destination">
      <view class="label destination">目的地：</view>
      <view>{{coalorder.destination}}</view>
    </view>
    <view class="form-row cost">
      <view class="label cost">运费：</view>
      <view>{{coalorder.cost}}</view>
    </view>
    <view class="form-row">
      <view class="label">姓名：</view>
      <input class="input" type="text" name="u_name" placeholder="请输入姓名" />
    </view>
    <view class="form-row">
      <view class="label">车牌号：</view>
      <input class="input" type="text" name="u_license_plate" placeholder="请输入车牌号" />
    </view>
    <view class="form-row">
      <view class="label">电话号：</view>
      <input class="input" type="text" name="tel_num" placeholder="请输入电话号码" />
    </view>
    <button style="width: 100%; height: 80rpx; margin-top: 30rpx; background-color: #39ac39; color: #ffffff; border-radius: 10rpx; display: flex; justify-content: center; align-items: center; font-size: 33rpx; font-weight: bold; box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);" class="button" form-type="submit" plain>提交</button>
  </form>
</view>